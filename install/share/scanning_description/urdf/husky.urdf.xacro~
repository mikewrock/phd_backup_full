<robot name="husky_robot" xmlns:xacro="http://ros.org/wiki/xacro">


  <xacro:include filename="$(find husky_description)/urdf/accessories/kinect_camera.urdf.xacro"/>
  <xacro:include filename="$(find husky_description)/urdf/accessories/sick_lms1xx_mount.urdf.xacro"/>
  <xacro:include filename="$(find husky_description)/urdf/accessories/sensor_arch.urdf.xacro"/>
  <xacro:include filename="$(find ur_description)/urdf/ur5.urdf.xacro" />

  <property name="M_PI" value="3.14159"/>

  <!-- Base Size -->
  <property name="base_x_size" value="0.98740000" />
  <property name="base_y_size" value="0.57090000" />
  <property name="base_z_size" value="0.24750000" />

  <!-- Wheel Mounting Positions -->
  <xacro:property name="wheelbase" value="0.5120" />
  <xacro:property name="track" value="0.5708" />
  <xacro:property name="wheel_vertical_offset" value="0.03282" />

  <!-- Wheel Properties -->
  <xacro:property name="wheel_length" value="0.1143" />
  <xacro:property name="wheel_radius" value="0.17775" />

 
<!-- FIXED-CUBE-5 -->
    <link name="fixed_cube_5">
        <inertial>
            <mass value="0.0001" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                iyy="0.0001" iyz="0.0" 
                izz="0.0001" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.07 0.07 0.07" />
            </geometry>
            <material name="PCubeGrey" >
		<color rgba=".2 .2 .2 1" />
    	    </material>
        </visual>
    </link>

    <joint name="fixed_cube_5_joint" type="fixed">
		<origin xyz="0.035 0.035 -0.035" rpy="0 0 ${-M_PI/2}" />
        <parent link="angle_connector"/>
        <child link="fixed_cube_5" />
    </joint>
 <!-- CUBE-5 -->
    <link name="cube_5">
        <inertial>
            <mass value="0.0001" />
            <origin xyz="0 0 0" />
            <inertia ixx="0.0001" ixy="0.0" ixz="0.0"
                iyy="0.0001" iyz="0.0" 
                izz="0.0001" />
        </inertial>

        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <box size="0.07 0.07 0.07" />
            </geometry>
            <material name="PCubeGrey" >
		<color rgba=".2 .2 .2 1" />
    	    </material>
        </visual>
    </link>

    <joint name="cube_joint" type="continuous">
		<origin xyz="-0.07 0 0" rpy="0 0 0" />
	  <axis xyz="-1 0 0" />
        <parent link="fixed_cube_5"/>
        <child link="cube_5" />
    </joint>
<!-- End Effector -->





  <!-- LASER payload (by default, a SICK LMS111). -->
  
    <link name="laser">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <!-- Origin of this mesh is the base of the bracket. -->
          <mesh filename="package://wrock_husky_description/meshes/sick_lms1xx.dae" />
        </geometry>
        <material name="dark_grey" />
      </visual>
    </link>

    <joint name="laser_mount_joint" type="fixed">
      <origin xyz="-.0285 -0.1 0" rpy="0 0 -${M_PI/2}" />
      <parent link="cube_5" />
      <child link="laser" />
    </joint>


</robot>
