#!/usr/bin/env python
PACKAGE = "phd"

from dynamic_reconfigure.parameter_generator_catkin import *

gen = ParameterGenerator()

gen.add("workspace",    double_t,    0, "Workspace Width", 0.5, 0, 10)
gen.add("height_step",    double_t,    0, "Height step", 0.25, 0, 10)
gen.add("max_height",    double_t,    0, "Maximum reachable height", 1.3, 0, 10)
gen.add("min_height",    double_t,    0, "Minimum reachable height", .75, 0, 10)
gen.add("offset",    double_t,    0, "distance from wall to end effector", 0.65, 0, 10)
gen.add("slice_thickness",    double_t,    0, "Thickness ofribs", 0.03, 0, 10)
gen.add("via_distance",    double_t,    0, "Distance between via points", 0.2, 0, 10)
gen.add("radial_steps",    double_t,    0, "number of ribs to make", 50, 0, 100)
gen.add("start_angle",    double_t,    0, "starting angle for ribs", -1.4, -10, 10)
gen.add("end_angle",    double_t,    0, "ending angle for ribs", 1.3, -10, 10)
gen.add("rib_downsampling",    double_t,    0, "distance between rib points", 0.02, 0, 10)
gen.add("rib_spacing",    double_t,    0, "distance between ribs", 0.05, 0, 10)
gen.add("z_vert_limit",    double_t,    0, "limit for z value to only use Z for distance", 1, 0, 10)
gen.add("rib_tolerance",    double_t,    0, "maximim distance a rib point can be from target point", 0.03, 0, 10)
gen.add("max_rib_length",    double_t,    0, "maximum distance along rib to calculate trajectory points", 2.26, 0, 10)

exit(gen.generate(PACKAGE, "trajectory_service", "Trajectory"))



